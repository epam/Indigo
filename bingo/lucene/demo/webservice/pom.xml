    <artifactId>webservice</artifactId>
    <packaging>war</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <url>http://localhost:8080/manager/text</url>
                    <server>TomcatServer</server>
                    <path>/webservice</path>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>com.epam.indigolucene.schemagenerator.JavaSolrSchemaRepresentationGenerator</mainClass>
                            <arguments>
                                <argument>TestSchema</argument>
                                <argument>${basedir}/../conf/schema.xml</argument>
                                <argument>${basedir}/src/main/java/</argument>
                                <argument>com.epam.indigolucene.service.generated</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
