CREATE OR REPLACE FUNCTION _sub_internal(text, text, text)
RETURNS boolean
AS 'BINGO_PATHNAME'
LANGUAGE C STRICT IMMUTABLE;

CREATE OR REPLACE FUNCTION _smarts_internal(text, text, text)
RETURNS boolean
