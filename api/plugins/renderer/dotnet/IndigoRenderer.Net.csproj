<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
        <Version>1.4.0</Version>
		<Authors>EPAM Systems Life Science Department</Authors>
		<Company>EPAM Systems</Company>
		<Description>Chemical structures renderer plugin for Indigo universal cheminformatics toolkit</Description>
		<Copyright>2009</Copyright>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://lifescience.opensource.epam.com/indigo/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/epam/indigo</RepositoryUrl>
		<PackageTags>cheminformatics chemistry indigo renderer substructure similarity</PackageTags>
		<Platforms>AnyCPU</Platforms>
		<RepositoryType>git</RepositoryType>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Drawing.Common" Version="4.7.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\dotnet\Indigo.Net.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="lib/Linux/x64/libindigo-renderer.so">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Linux/x64/libindigo-renderer.so</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Linux/x86/libindigo-renderer.so">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Linux/x86/libindigo-renderer.so</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Mac/10.7/libindigo-renderer.dylib">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Mac/10.7/libindigo-renderer.dylib</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/indigo-renderer.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/indigo-renderer.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/indigo-renderer.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/indigo-renderer.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
		<Exec Command="powershell -ExecutionPolicy Bypass -NoProfile -NonInteractive -File $(ProjectDir)/prebuild.ps1" />
	</Target>

</Project>
