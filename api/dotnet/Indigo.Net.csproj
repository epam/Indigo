<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.4.0</Version>
		<Authors>EPAM Systems Life Science Department</Authors>
		<Company>EPAM Systems</Company>
		<Description>Universal cheminformatics toolkit</Description>
		<Copyright>2009</Copyright>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://lifescience.opensource.epam.com/indigo/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/epam/indigo</RepositoryUrl>
		<PackageTags>cheminformatics chemistry indigo substructure similarity</PackageTags>
		<Platforms>AnyCPU</Platforms>
		<RepositoryType>git</RepositoryType>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<DefineConstants />
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<DefineConstants />
	</PropertyGroup>

	<ItemGroup>
		<Content Include="lib/Linux/x64/libindigo.so">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Linux/x64/libindigo.so</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Linux/x86/libindigo.so">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Linux/x86/libindigo.so</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Mac/10.7/libindigo.dylib">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Mac/10.7/libindigo.dylib</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/concrt140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/concrt140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/indigo.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/indigo.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/msvcp140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/msvcp140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/vcruntime140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/vcruntime140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x64/vcruntime140_1.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x64/vcruntime140_1.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/concrt140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/concrt140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/indigo.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/indigo.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/msvcp140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/msvcp140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/vcruntime140.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/vcruntime140.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="lib/Win/x86/vcruntime140_1.dll">
			<Pack>true</Pack>
			<PackagePath>lib/netstandard2.0/lib/Win/x86/vcruntime140_1.dll</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
		<Exec Command="powershell -ExecutionPolicy Bypass -NoProfile -NonInteractive -File $(ProjectDir)/prebuild.ps1" />
	</Target>

</Project>
